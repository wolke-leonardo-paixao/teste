#!/bin/bash

# Obter o nome do branch atual
current_branch=$(git rev-parse --abbrev-ref HEAD)

# Definir o nome do arquivo temporário
temp_script="temp/script_temp.sql"

# Substituir @branch_name pelo nome do branch atual e salvar em um novo arquivo temporário
sed "s/@branch_name/$current_branch/g" src/script.sql > "$temp_script"

# Renomear script.sql original para script_original.sql
mv src/script.sql src/script_original.sql

# Renomear script_temp.sql para script.sql
mv "$temp_script" src/script.sql