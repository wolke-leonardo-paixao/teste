#!/bin/bash

branch=$(git rev-parse --abbrev-ref HEAD)


echo "Diretório: ../src/"
ls -l src/

for file in ../src/*.sql; do
    if [ -f "$file" ]; then
        # Faça alguma coisa com o arquivo
        echo "Arquivo SQL encontrado: $file"
    else
        echo "Arquivo SQL não encontrado: $file"
    fi
done


