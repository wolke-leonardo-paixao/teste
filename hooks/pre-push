#!/bin/bash

# Obter o nome do branch atual
current_branch=$(git rev-parse --abbrev-ref HEAD)

# Definir o nome do arquivo tempor치rio
branch_file="branch.txt"

# Criar arquivo tempor치rio contendo o nome do branch
echo "$current_branch" > "$branch_file"

# Adicione o arquivo tempor치rio ao git para que ele seja enviado ao reposit칩rio remoto
git add "$branch_file"
